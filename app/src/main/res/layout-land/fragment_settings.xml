<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ff889886"
    android:id="@+id/Settings_layout">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mustang Radio"
        android:id="@+id/App_Label"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textIsSelectable="true"
        android:typeface="serif"
        android:singleLine="true"
        android:hint="App_Label"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row1"
        android:paddingTop="0dp"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/IO"
            android:text="IO"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="100dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/CATFOLD"
            android:text="Cat/Fold"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="125dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="Text"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/direct"
            android:text="*direct"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row2"
        android:paddingTop="0dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="false">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Clock"
            android:text="Clock"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="100dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Color"
            android:text="Color"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="125dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Sound"
            android:text="Sound"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/Sirius"
            android:text="Sirius"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seek"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="14pt"
        android:textColor="#ff000000"
        android:paddingTop="50dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3"
        android:paddingTop="0dp"
        android:layout_marginTop="0dp"
        android:baselineAligned="false"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/SeekUp"
            android:text="Up"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="0dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/SeekDown"
            android:text="Down"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="10dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/SeekLeft"
            android:text="Left"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="10dp" />
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/SeekRight"
            android:text="Right"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />
    </LinearLayout>


    <TextView android:id="@+id/SettingText" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Radio"
        android:gravity="left"
        android:layout_marginTop="135dp"
        android:textColor="#ff000000"
        android:layout_marginLeft="60dp"
        android:textSize="6pt"
        android:textIsSelectable="true" />
</LinearLayout>