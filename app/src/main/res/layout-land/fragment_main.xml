<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff889886"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/App_layout"
    android:focusableInTouchMode="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mustang Radio"
        android:id="@+id/App_Label"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textIsSelectable="true"
        android:typeface="serif"
        android:singleLine="true"
        android:hint="App_Label"
        android:gravity="center" />

    <LinearLayout
        android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id ="@+id/Vertical"
        android:layout_below="@+id/App_Label">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioButtons"
            android:paddingTop="0dp"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio1"
                android:text="@string/Radio1"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio2"
                android:text="@string/Radio2"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio3"
                android:text="@string/Radio3"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio4"
                android:text="@string/Radio4"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio5"
                android:text="@string/Radio5"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio6"
                android:text="@string/Radio6"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio7"
                android:text="@string/Radio7"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio8"
                android:text="@string/Radio8"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio9"
                android:text="@string/Radio9"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio0"
                android:text="@string/Radio0"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_weight="1" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:id="@+id/Row2"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/VolRight"
            android:text="+"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="25dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Scan"
            android:text="Scan"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="25dp" />
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/Tune_left"
            android:text="L"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/Tune_right"
            android:text="R"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="25dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Phone"
            android:text="Phone"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton"
            android:layout_marginRight="25dp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/Aux"
            android:text="Aux"
            android:textColor="#ffffffff"
            android:textSize="14pt"
            android:background="@drawable/mybutton" />



    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Row2"
            android:layout_alignParentStart="true"
            android:id="@+id/Row3"
            android:gravity="top"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/Volleft"
                android:text="-"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"

                android:layout_marginRight="25dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/Menu"
                android:text="Menu"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_marginRight="25dp" />
            <Button
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:id="@+id/OK"
                android:text="OK"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                android:layout_marginRight="25dp" />

            <Button
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:id="@+id/iPhone"
                android:text="iPhone"
                android:textColor="#ffffffff"
                android:textSize="11pt"
                android:background="@drawable/mybutton"
                android:layout_marginRight="5dp" />

            <Button
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:id="@+id/Android"
                android:text="Droid"
                android:textColor="#ffffffff"
                android:textSize="12pt"
                android:background="@drawable/mybutton"
                android:layout_marginRight="25dp" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/AMFM"
                android:text="FM"
                android:textColor="#ffffffff"
                android:textSize="14pt"
                android:background="@drawable/mybutton"
                 />
        </LinearLayout>

        <TextView android:id="@+id/section_label" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the Radio"
            android:gravity="left"
            android:layout_marginTop="95dp"
            android:textColor="#ff000000"
            android:textSize="6pt"
            android:textIsSelectable="false" />

    </LinearLayout>








</RelativeLayout>
